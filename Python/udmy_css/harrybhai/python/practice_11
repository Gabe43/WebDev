class train:
    def bookticket(self,m):
        n = 0
        while(n<m):
            name = input("Enter your Name")
            age = input("Enter your age")
            address = input("Enter your address")
            dateoftravel =input("Enter the date of travel")
            if(self.seats>0):
                print ("Your Ticket is Booked and your seat number is :- " + str(self.seats))
                self.seats = self.seats-1
            else :
                print("Seats is full")
            print (f"Your ticket is booked with information :- \n Name - {name} \n Age - {age} \n Address - {address} \n Date - {dateoftravel}")
            n = n+1
    def status(self):
        print(f"Total number of seats left :-  {self.seats}")
    @staticmethod
    def fare():
        print("The fare of the train is 1250")
    
entry = train()
entry.seats = 10
b = int(input("Press 1. to Book Ticket \n Press 2. to see the total number of seats \n Press 3. to see the Fare"))
m = int(input("Enter the Number of tickets to be booked"))
if (b==1):
    entry.bookticket(m)
elif(b==2):
    entry.status()
elif (b==3):
    entry.fare()
entry.status()










    




